---
import { Provider } from "@/components/provider";
import "@/styles/global.css";
import { TITLE } from "astro:env/client";
import { ClientRouter } from "astro:transitions";
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{TITLE}</title>

    <script src="/iconfont.js" is:inline data-astro-rerun></script>
    <ClientRouter />
  </head>
  <body class="relative overflow-hidden bg-base-200">
    <Provider pathname={pathname} client:load transition:persist />
    <slot />
  </body>
</html>
